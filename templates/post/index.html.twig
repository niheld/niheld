{% extends 'base.html.twig' %}

{% block title %}posts{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Liste Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th> 
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>
                    <a class="btn btn-info" href="">Detail</a>
                    <a class="btn btn-warning" href="">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="">Create new</a>
</div>
{% endblock %}
